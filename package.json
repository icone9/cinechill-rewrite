		"autoprefixer": "^10.4.14",
		"drizzle-kit": "^0.19.12",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.0",
